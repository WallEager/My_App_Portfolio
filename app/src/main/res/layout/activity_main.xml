<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/colorBack">

    <TextView android:text="My Nanodegree Apps!" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nanodegreeApps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="27sp"
        android:gravity="center"
        android:paddingBottom="40dp"
        android:paddingTop="16dp"
        android:textColor="@color/colorTitle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="56dp"
        android:paddingRight="56dp"
        android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotifyStreamer"
        android:background="@color/colorButton"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scoresApp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorButton"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/libraryApp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorButton"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:layout_marginBottom="8dp"
        android:id="@+id/buildItBigger"
        android:background="@color/colorButton"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyzReader"
        android:layout_marginBottom="8dp"
        android:background="@color/colorButton"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CASTONE: MY OWN APP"
        android:id="@+id/castonesApp"
        android:background="@color/colorCastone"/>
    </LinearLayout>
</LinearLayout>


